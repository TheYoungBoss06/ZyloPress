// ZyloPress Test Script - Native Zylo
import { logger } from '../zylopress/utils.zylo'

func runTests() {
  logger.info('Running ZyloPress tests...')

  // Run unit tests
  logger.info('Running unit tests...')
  zylo.run('./tests/unit-middleware.zylo')

  // Run E2E tests
  logger.info('Running E2E tests...')
  zylo.run('./tests/e2e-routes.zylo')

  logger.info('All tests completed')
}

runTests()