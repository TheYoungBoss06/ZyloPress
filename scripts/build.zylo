// ZyloPress Build Script - Native Zylo
import { logger } from '../zylopress/utils.zylo'

func build() {
  logger.info('Starting ZyloPress build...')

  // Compile Zylo files (assuming zylo compiler)
  zylo.compile('./zylopress', './dist')
  zylo.compile('./example', './dist/example')
  zylo.compile('./tests', './dist/tests')

  // Copy static files
  zylo.fs.copy('./README.md', './dist/README.md')

  logger.info('ZyloPress build completed successfully')
}

build()